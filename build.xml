<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/"/>
        <javac srcdir="./" destdir="build/"/>
    </target>
	
	 <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="/build/jar/HelloWorld.jar" basedir="build/jar">
            <manifest>
                <attribute name="Main-Class" value="oata.Test"/>
            </manifest>
        </jar>
    </target>
	
    <target name="run">
        <java jar="build/jar/HelloWorld.jar" fork="true"/>
    </target>

</project>